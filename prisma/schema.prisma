generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  EMPLOYER
  SITTER
}

model User {
  id        Int       @id @default(autoincrement())
  phone     String    @unique
  name      String?
  role      UserRole?
  createdAt DateTime  @default(now())

  employerProfile EmployerProfile?
  sitterProfile   SitterProfile?

  employerMatches Match[] @relation("EmployerMatches")
  sitterMatches   Match[] @relation("SitterMatches")

  employerRequests MatchRequest[] @relation("EmployerRequests")
  sitterRequests   MatchRequest[] @relation("SitterRequests")
}

model Otp {
  id        Int      @id @default(autoincrement())
  phone     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model EmployerProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  address   String?
  children  Int?
  needs     String? // 간단한 요구사항
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SitterProfile {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  user          User     @relation(fields: [userId], references: [id])
  bio           String?
  experience    Int?
  skills        String?
  availableTime String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Match {
  id         Int     @id @default(autoincrement())
  employerId Int
  sitterId   Int
  active     Boolean @default(true)

  contractEnd DateTime?
  visaExpire  DateTime?

  employer User @relation("EmployerMatches", fields: [employerId], references: [id])
  sitter   User @relation("SitterMatches", fields: [sitterId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MatchRequest {
  id         Int    @id @default(autoincrement())
  employerId Int
  sitterId   Int
  status     String

  employer User @relation("EmployerRequests", fields: [employerId], references: [id])
  sitter   User @relation("SitterRequests", fields: [sitterId], references: [id])

  createdAt DateTime @default(now())
}
