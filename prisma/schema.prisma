generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  EMPLOYER
  SITTER
}

model User {
  id              Int              @id @default(autoincrement())
  phone           String           @unique
  role            UserRole?
  createdAt       DateTime         @default(now())
  employerProfile EmployerProfile?
  sitterProfile   SitterProfile?
}

model Otp {
  id        Int      @id @default(autoincrement())
  phone     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model EmployerProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  address   String?
  children  Int?
  needs     String? // 간단한 요구사항
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SitterProfile {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  user          User     @relation(fields: [userId], references: [id])
  bio           String?
  experience    Int?
  skills        String?
  availableTime String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
